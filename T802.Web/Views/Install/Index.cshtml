@model T802.Web.Models.Install.InstallModel
@{
    ViewBag.Title = "Install";
}

<div class="jumbotron">
    <h1>Install Index</h1>
</div>
@using (Html.BeginForm("Index", "Install", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    <h3>Main Site Information</h3>

    @Html.ValidationSummary(false, "Errors:", new { @class = "alert alert-error" })


    <div class="form-group">
        @Html.Label("Admin Username", new {@class = "col-sm-4 control-label"})
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.AdminUsername, new {@class = "form-control", placeholder = "Enter Admin Username"})
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Admin Password", new {@class = "col-sm-4 control-label"})
        <div class="col-sm-8">
            @Html.PasswordFor(x => x.AdminPassword, new {@class = "form-control", placeholder = "Enter Admin Password"})
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Confirm Password", new {@class = "col-sm-4 control-label"})
        <div class="col-sm-8">
            @Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control", placeholder = "Confirm Admin Password"})
        </div>
    </div>

    <div class="form-group">
        <span class="col-sm-4"></span>
        <div class="col-sm-8">
            <input type="submit" value="Install" class="btn btn-primary col-sm-8"/>
        </div>
    </div>
}

