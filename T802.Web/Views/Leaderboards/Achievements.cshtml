@model List<T802.Web.Models.Leaderboard.AchievementLeaderboardModel>
@{
    ViewBag.Title = "Achievement Leaderboard";
}

<h2>Achievement Leaderboard</h2>

@if (Model.Count > 0)
{
    @Html.Grid(Model).Columns(columns =>
          {
              columns.Add(foo => foo.Position).Titled("Position").SetWidth(5);
              columns.Add()
                  .Encoded(false)
                  .Sanitized(false)
                  .SetWidth(65)
                  .RenderValueAs(d => @Html.ActionLink(d.Username, "Index", "Achievements", new { id = d.Username }, null));
              columns.Add(foo => foo.PlatinumCount).Titled("Platinum").SetWidth(10);
              columns.Add(foo => foo.GoldCount).Titled("Gold").SetWidth(10);
              columns.Add(foo => foo.SilverCount).Titled("Silver").SetWidth(10);
              columns.Add(foo => foo.BronzeCount).Titled("Bronze").SetWidth(10);
              columns.Add(foo => foo.TotalCount).Titled("Total").SetWidth(10);
          }).WithPaging(20)
}

