@model T802.Web.Models.Quiz.QuizModel
@{
    ViewBag.Title = "Create a Quiz";
}

@using (Html.BeginForm("Create", "Quizzes", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3>Create Quiz</h3>

    @Html.ValidationSummary(false, "Errors:", new { @class = "alert alert-error" })

    <div class="form-group">
        @Html.Label("Quiz Name", new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Quiz Name" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Desctiption", new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Enter Quiz Name" })
        </div>
    </div>

    <div class="form-group">
        <span class="col-sm-4"></span>
        <div class="col-sm-8">
            <input type="submit" value="Create" class="btn btn-primary col-sm-8" />
        </div>
    </div>
}

